@model AGCI.Models.Pregunta

@{
    ViewBag.Title = "Eliminar";
}

<div class="formpanel panel-default">
    <div class="panel-heading">
        <h3 class="text-center">Eliminar Pregunta</h3>
    </div>
    <div class="panel-body">
        <h3 class="alert-danger">¿Realmente desea eliminar esta Pregunta?</h3>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.GrupoPregunta.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GrupoPregunta.Nombre)
            </dd>





            <dt>
                @Html.DisplayNameFor(model => model.ComponenteDescripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ComponenteDescripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Norma)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Norma)
            </dd>

        </dl>
        <div class="panel-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-md-offset-9 col-md-3">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        <a class="btn btn-default" href="@Url.Action("Index","Preguntas")">Cancelar</a>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

