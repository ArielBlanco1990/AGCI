@model AGCI.Models.Ley
@{
    ViewBag.Title = "Eliminar";
}

<div class="formpanel panel-default">
    <div class="panel-heading">
        <h3 class="text-center">Eliminar Componente</h3>
    </div>
    <div class="panel-body">
        <h3 class="alert-danger">¿Realmente desea eliminar este Componente?</h3>

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FechaVencimiento)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaVencimiento)
            </dd>


        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <hr />
            <div class="form-group">
                <div class="col-md-offset-9 col-md-3">
                    <input type="submit" value="Guardar" class="btn btn-warning" />
                    <a class="btn btn-default" href="@Url.Action("Index","Leyes")">Cancelar</a>
                </div>
            </div>
        }
    </div>

    