@model AGCI.Models.ContenidoGuia

@{
    /**/

    ViewBag.Title = "Edit";
}


<h3>Editar Pregunta</h3>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-8 col-md-offset-3">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CGR)
            @Html.HiddenFor(model => model.GuiaId)
            @Html.HiddenFor(model => model.NoPreguntas)
            @Html.HiddenFor(model => model.Otros)
            @Html.HiddenFor(model => model.ComponenteDescripcion)
            @Html.HiddenFor(model => model.Direccion)
            @Html.HiddenFor(model => model.Nombre)
            @Html.HiddenFor(model => model.Norma)
            @Html.HiddenFor(model => model.Numero)
            @Html.HiddenFor(model => model.LeyId)
            @Html.HiddenFor(model => model.FechaDeVencimiento)


            <div class="form-group">
                <label class="control-label col-md-3">Respuesta</label>
                <div class="col-md-9">
                    @Html.DropDownList("Respuesta", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Responsable, "Responsable", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownList("ResponsableId", null, htmlAttributes: new { @class = "form-control", @chosen = "chosen" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.JefeInmediato, "Jefe Inmediato", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownList("JefeInmediatoId", null, htmlAttributes: new { @class = "form-control", @chosen = "chosen" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-4 col-md-7">
                    <a class="btn btn-default" href="@Url.Action("Details", "Guias", new {Id = @ViewBag.Guia})">Atrás</a>
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
