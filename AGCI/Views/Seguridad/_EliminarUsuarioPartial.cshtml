@model AGCI.Models.Trabajador

    <div class="modal-body">
        <h3>¿Está seguro que desea eliminar este usuario?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Nombre y Apellidos
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NombreCompleto)
                </dd>

                <dt>
                    Dirección
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PuestoDeTrabajo.UnidadOrganizativa.Nombre)
                </dd>
            </dl>
        </div>
    </div>

    <div class="modal-footer">
        @using (Html.BeginForm("EliminarConfirmado", "Seguridad", new { @id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </div>
        }
    </div>

