@model AGCI.Models.UnidadOrganizativa

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Nueva Entidad</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row xl">
        @Html.ValidationSummary(true)

        <div class="col-md-6">
            @Html.LabelFor(model => model.Codigo, "Codigo", new { @class = "control-label col-md-3 " })
            <div class="form-group col-md-7 ">
                @Html.EditorFor(model => model.Codigo)
                @Html.ValidationMessageFor(model => model.Codigo)
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Nombre, "Nombre", new { @class = "control-label col-md-3 " })
            <div class="form-group col-md-7 ">
                @Html.EditorFor(model => model.Nombre)
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>


    </div>
  

    <div class="form-group x">
        <div class="col-md-offset-10 col-md-2">
            @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-default" })
            <input type="submit" value="Crear" class="btn btn-success" />
        </div>
    </div>

    <hr />
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $("#TipoUnidadOrganizativaId").change(function () {
                var url = "@Url.Action("Pertenece", "UnidadOrganizativa")?prioridad=" + $("#TipoUnidadOrganizativaId option:selected").val();
                $("#pertenece").load(url);
            });
        });
    </script>

}